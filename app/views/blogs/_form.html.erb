<%= form_for @blog do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :questions do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: :blog_title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :blog_description, :class => 'form-control ckeditor' %>
  </div>

  <div class="field">
    <%#= f.label :avatar %>
    <%#= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :recentposts %>
    <%= f.text_field :recentposts, id: :blog_recentposts %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
